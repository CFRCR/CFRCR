/*Remove blue (in chrome) highlight arond components*/
html:focus {outline:0;}

/*MDL hides components based on screen size in javascript, leaving them visible until it executes. This hides them on page load*/
@media screen and (min-width: 1025px) {
  .mdl-layout--small-screen-only {
    display:none;
  }
}
@media screen and (max-width: 1024px) {
  .mdl-layout--large-screen-only {
    display:none;
  }
}
/*Makes mdl-grids 0 height if empty*/
.mdl-grid:empty {
  padding: 0;
}

/*Styling for inline `` markdown code*/
:not(.highlight) > :not(pre) > code {
  border-radius: 5px;
  background-color: #ECEFF1;
  padding: 2.5px 5px;
}
